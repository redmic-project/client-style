// Funciones simples

noDisplay()
	display none !important

noShow()
	visibility hidden

noDecorated()
	text-decoration none !important

noShadow()
	box-shadow none

noMargin(important = 0)
	if important
		margin 0 important
	else
		margin 0

nanoMargined(modo = 0)
	if !modo
		margin $nano
	if modo == v
		margin $nano 0
	if modo == h
		margin 0 $nano

microMargined(modo = 0)
	if !modo
		margin $micro
	if modo == v
		margin $micro 0
	if modo == h
		margin 0 $micro

miniMargined(modo = 0)
