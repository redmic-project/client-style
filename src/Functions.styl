noBorder(important = 0)
	if important
		border none important
	else
		border none

bordeRedondeado(borderRadius = $radio-esquinas)
	border-radius borderRadius

bordeRedondeadoTop(borderRadius = $radio-esquinas)
	border-top-left-radius borderRadius
	border-top-right-radius borderRadius

bordeOscuro()
	border $borderDark

bordeClaro(borde = 0)
	if !borde
		border $borderLight
	if borde == bottom
		border-bottom $borderLight

sombreadoCaja(direccion = 0)
	if !direccion
		box-shadow $sombra-contenedor-externa-centrada-oscura, $sombra-contenedor-interna-centrada-clara
	if direccion == o
		box-shadow $sombra-contenedor-externa-centrada-oscura
	if direccion == i
		box-shadow $sombra-contenedor-interna-centrada-clara

sombreadoCajaInv(direccion = 0)
	if !direccion
		box-shadow $sombra-contenedor-externa-centrada-clara, $sombra-contenedor-interna-centrada-oscura
	if direccion == o
		box-shadow $sombra-contenedor-externa-centrada-clara
	if direccion == i
		box-shadow $sombra-contenedor-interna-centrada-oscura

sombreadoRelieve(invertido = 0)
	if !invertido
		box-shadow inset $sombra-se $nano 0 rgba($black, $highOpacity), inset $sombra-o $nano 0 rgba($black, $highOpacity), inset $sombra-n $nano 0 rgba($white, $highOpacity)
	else
		box-shadow inset $sombra-se $nano 0 rgba($white, $highOpacity), inset $sombra-o $nano 0 rgba($white, $highOpacity), inset $sombra-n $nano 0 rgba($black, $highOpacity)

sombreadoTextoOscuro()
	text-shadow $sombra-texto-sur-oscura

sombreadoTextoClaro()
	text-shadow $sombra-texto-sur-clara

sombreadoTexto(invertido = 0)
	if !invertido
		sombreadoTextoOscuro()
	else
		sombreadoTextoClaro()

colorTexto(invertido = 0)
	if !invertido
		color $white
	else
		color $black

negrita()
	font-weight bold



// Funciones compuestas

fullSize(direccion = 0)
	if !direccion
		width 100%
		height 100%
	if direccion == h
		width 100%
	if direccion == v
		height 100%

halfSize(direccion = 0)
	if !direccion
		width 50%
		height 50%
	if direccion == h
		width 50%
	if direccion == v
		height 50%

maximizeFont()
	font-size $baseFontSize + arguments
	line-height $baseFontSize + arguments

flexible(orientacion, justificado, alineado)
	display flex
	flex-wrap nowrap
	if orientacion == h
		flex-direction row
	if orientacion == hr
		flex-direction row-reverse
	if orientacion == v
		flex-direction column
	if orientacion == vr
		flex-direction column-reverse
	if justificado == left
		justify-content flex-start
	if justificado == center
		justify-content center
	if justificado == right
		justify-content flex-end
	if justificado == space-between
		justify-content space-between
	if justificado == space-around
		justify-content space-around
	if alineado == up
		align-content flex-start
		align-items flex-start
	if alineado == center
		align-content center
		align-items center
	if alineado == down
		align-content flex-end
		align-items flex-end

flexibleUp()
	align-self flex-start

flexibleCenter()
	align-self center

flexibleDown()
	align-self flex-end

flexibleOrder(orden)
	order orden

flexibleGrow(tasa)
	flex-grow tasa

fondo(tipo, tono = 0)
	if tipo == none
		background none
	if tipo == degradado
		background-size 100%
		if tono == topbar
			background $color13
			background linear-gradient(top, $colorGrayBlack, $color13)
		if tono == sidebar
			background $color4
			background linear-gradient(top, $color3, $color4)
		if tono == primary
			background linear-gradient(bottom, $colorPrimary1, $colorPrimary2)
		if tono == buttonLogin
			background linear-gradient(bottom, $colorLoginTextBox, $colorLoginButton)
		if tono == buttonLoginHover
			background linear-gradient(bottom, $colorLoginButtonHover2, $colorLoginButtonHover)
	if tipo == color
		background tono
	if tipo == imagen
		background-image tono
		background-size cover


createAnimation(name, duration, iteration, timing, delay = 0)
	animation-name name
	animation-duration duration
	animation-iteration-count iteration
	animation-timing-function timing
	if delay
		animation-delay delay

zoomWhenMouseHover(inv = 0)
	if (inv)
		transform scale(0.8,0.8)
	transition 0.5s ease-in-out
	&:hover
		if (!inv)
			transform scale(1.2,1.2)
		else
			transform scale(1,1)
