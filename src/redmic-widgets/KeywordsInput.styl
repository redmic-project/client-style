.KeywordsInput
	    width 100%
	> input
		display none
	.list
		display flex
		justify-content flex-start
		align-items center
		flex-wrap wrap
		background-image $linen-light
		border 1px solid rgba(255, 255, 255, 0.7)
		padding 5px 5px 0 5px
		min-height 3rem
		border-radius 5px
		.tagComplete
			background-color white
			color black
			margin-right 5px
			margin-bottom 5px
			border-radius 5px
			span
				margin-right 5px
			i
				cursor pointer
		.tagNew
			input
				color white
		.tagNew, .tagComplete
			display block
			float left
			padding 5px
			> input
				border none
				background-image $linen-light
	.active
		border-color rgba(82,168,236,.8) !important

	.notValid
		border-color #b94a48 !important