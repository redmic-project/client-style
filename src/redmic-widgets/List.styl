	.topZone
	.contentList
		border-radius 0

.removed
	animation disappear 0.5s
	animation-fill-mode forwards

@keyframes disappear
	100%
		transform translateX(100%)

.added
	animation appear 0.5s
	animation-fill-mode forwards

@keyframes appear
	0%
		transform translateX(100%)
	100%
		transform translateX(0%)
