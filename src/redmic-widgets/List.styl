.containerList .bottomList
.bottomListBorder .contentList
	border-radius 0 0 5px 5px
	border-top solid 1px $gray

.containerList
	padding 0
	display flex
	flex-flow column
	flex-grow 1

	.pagination
		display flex
		margin 0

		li
			> a
			> span
				padding 0px 5px
				cursor pointer
				color $white
				background-color transparent
				border none
				height 1.6rem
				display flex !important
				align-items center

			&.active
				> a
				> span
					background-color $blue
					border-radius 5px

			> .angle:hover
				color $blue

			&.disabled
				> a
				> span
					cursor not-allowed
					background-color transparent
					color rgba($white, 0.5)

				> .angle:hover
					color $black

	.framework
		fondo color $color13
		padding 0.5rem

	.bottomList
		display flex
		justify-content space-between
		flex-wrap wrap
		align-items center

		.keypadZone
			margin-bottom 5px

		.iconKeypad
			margin-bottom 5px
			i
				fontSize 1.4rem
				color $white

		.totalResult
			display flex
			align-items center

			span
				color $white

				&:first-child
					padding-right 5px

		.orderZone
			display flex
			justify-content center
			align-items center
			flex-wrap wrap

			> span
				display flex
				margin-right 1rem

			.containerOrder
				position relative
				display flex
				align-items center

				select
					padding-left 2rem

				span
					position absolute
					left 5px
					top 6px
					cursor pointer

					&:hover
						color $blue

		.paginate
			display flex
			flex-wrap wrap
			justify-content center
			align-items center

			.selectOption
				color $black

		.paginate
		.containerOrder
		.containerSelectionBox
			.form-control
				background-color $color1
				color $white

	.flexEndContent
		justify-content flex-end

	.containerScroll
		display flex
		flex-direction column
		overflow auto
		flex-grow 1

	.contentList
		position relative
		overflow auto
		height 100%
		background-color $color12
		flex-grow 1
		color $white
		display flex
		align-items center

		.rowsContainer
			flex-grow 1
			position absolute
			top 0
			width 100%
			align-self flex-start
			max-height 100%
			display flex
			flex-flow column

			& .rowsContainer
				padding-left 2rem

			.containerRow
				text-shadow .5px .5px $black

				&:nth-child(odd)
					background-color $color5
				&:nth-child(even)
					background-color $color12

				.dragAndDropContainerRow
					background-color $color6 !important

				.borderTopDragAndDrop
					border-top 1.5rem solid $yellowTitleRedmic !important

				.borderBottomDragAndDrop
					border-bottom 1.5rem solid $yellowTitleRedmic !important

				.containerTopRow
					display flex
					justify-content left
					align-items center

					&:hover
						box-shadow inset 0px 0px .5rem .3rem rgba($white, 0.3) !important

					.rowList
						padding 1rem
						display flex
						flex-grow 1
						//flex-basis 5rem
						align-items center

						> img
							width 5rem
							height 5rem
							object-fit cover
							margin-right 0.7rem
							border-radius 10px
					.spanIcon
						font-size 3.2rem
						padding-right 5px

				.containerTopRowDragAndDrop
					cursor move

				&.selectContainerRow
					&:nth-child(odd) > .containerTopRow
						background-color $blue !important
					&:nth-child(even) > .containerTopRow
						background-color lighten($blue, 20%) !important

				&.selectContainerRow > .containerTopRow
					&:hover
						box-shadow inset 0px 0px .5rem .3rem rgba($black, 0.3) !important

					span
						&.checkboxIcon
						&.radioButtonIcon
						&.toggleIcon
							@extend .fa

						&.checkboxIcon:before
							@extend .fa-check-square-o:before

						&.radioButtonIcon:before
							@extend .fa-check-circle:before

						&.toggleIcon:before
							@extend .fa-toggle-on:before

				.moreResult
					height 4rem
					display flex
					justify-content center
					background-color $color6 !important
					font-weight 600
					cursor pointer

					span
						margin 0 3rem

					&:hover
						background-color $color7 !important

				em
				b
					fontSize 1.2
					color $blue

				&.selectContainerRow
					em
					b
						color $blueDark

				.containerButtons
					color $white
					padding 1rem
					display flex
					//flex-grow 1
					justify-content flex-end
					align-self flex-start
					flex-wrap wrap
					//flex-basis 3rem

					> *
						display flex
						justify-content center
						flex-direction row
						margin 0
						padding .2rem
						min-width 1.8rem
//					> i
//					> div
//					> a i
//						margin 0
//						padding .2rem

//					> a
//					> i
//					> a i
//						display flex
//						justify-content center
//						flex-direction column
//						color $gray

				&.selectContainerRow
					.containerButtons
						.fa-info-circle
							color $white

				.containerButtonsForm
					justify-content space-around

	.contentListNoData
		background-color $color2

	.check
		width 1rem
		margin 0 0.5rem
		cursor pointer
		display flex
		justify-content center
		align-items center

		span
			&.checkboxIcon
			&.radioButtonIcon
			&.toggleIcon
				@extend .fa

			&.checkboxIcon:before
				@extend .fa-square-o:before

			&.radioButtonIcon:before
				@extend .fa-circle-thin:before

			&.toggleIcon:before
				@extend .fa-toggle-off:before

	.iconListNoButton
		font-size 3rem

	.notDataFound
		@extend .fHeight
		display flex
		justify-content center
		align-items center

.containerList
.infoTitle
	.iconList
		cursor pointer
		font-size 20px

.containerHierarchicalList
	.contentList
		user-select none
		cursor default

		.rowsContainer
			position inherit
			width inherit

		img
			user-drag none

		.containerRow
			.containerBottomRow
				background-color $color12
				border-top 1px solid $gray

				.containerTopRow
					border-left 1px solid $gray

				.containerBottomRow
					border-top none

			.containerTopRow
				.expandCollapse
					display flex
					justify-content center
					align-items center
					cursor pointer
					margin-left 1rem

					span
						width 1rem
						font-size 1.8rem
						padding 0 .5rem

			&.mixedSelectContainerRow > .containerTopRow
				background-color rgba($blue, 0.4) !important

				span
					&.checkboxIcon
						@extend .fa

					&.checkboxIcon:before
						@extend .fa-square:before

.spanTemplate
	display flex
	width 100%
	flex-direction column
	overflow hidden

	.title
		font-weight 600

		.scientificName
			font-style italic

	.subtitle .subtitleIcon
		font-size 1.3rem
		color $color15

		.status
			text-transform capitalize

	.subtitle .name
		font-style italic

	.subtitle
	.title
		i
			font-size 1.5rem
			padding-left 0.5rem
			cursor default

	.subtitleIcon
		margin-top 5px

		i
			padding-left 0
			font-size 3rem

	.subTitleFlex
		display flex
		align-items center

		span
			&:last-child
				margin-left 1rem

			&:first-child
				margin-left 0

		.subtitleIcon
			margin-top 0

	.picture
		padding 0.5rem

		.animalImage
			width 10rem !important
			min-width 10rem
			height 10rem !important
			min-height 10rem

.spanTemplateTable
.headerList
	.rowSpan
		min-width 8rem
		justify-content center
		display flex

.headerListWithSelection
	padding 0.5rem 0
	padding-left 3rem
	font-weight bold

.containerRow
	.table-row
		display flex
		align-items initial !important
		flex-grow 2
		padding-right 3rem

	.containerButtonsForm .disableButton
		cursor not-allowed
		opacity .65

.containerRow .table-row
.headerList
	.table-cell
		padding 0 0.5rem
		border-right 1px solid rgba($black, 0.1)
		align-items center

	.table-col-1
		flex-grow 2

.headerList
	display flex
	background-color $color1
	padding 1rem 0 1rem 0
	position relative

	.iconOptionHeader
		position absolute
		left 10px
		cursor pointer
		display flex
		align-items center
		height calc(100% - 2rem)

		&:hover
			color $blue

	.table-cell
		border-right 1px solid rgba($white, 0.5)
		justify-content center

.spanTemplateTable
	flex-direction row

.noBorderList .containerList .contentList
	border-radius 0

.borderList .containerList .contentList
	border-radius 5px

.resultZone
	display flex
	align-items center
	flex-wrap wrap

	div
		margin-right 1rem
		&:last-child
			margin-right 0

.imageLayerList
	width 6rem !important
	min-width 6rem
	height 6rem !important
	min-height 6rem




