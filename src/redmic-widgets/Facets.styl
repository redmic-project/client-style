.containerFacets
	fondo color $color13
	color $white
	height 100%
	border-radius 5px
	overflow-y auto
	fontSize 0.9rem

	.dijitTitlePaneTitle
		cursor pointer
		fontSize 1.2rem
		margin-bottom 10px

	.dijitTitlePaneTitleFocus
		display flex
		flex-direction row-reverse
		justify-content flex-end

		.dijitArrowNodeInner
			display none

		.dijitArrowNode
			@extend .fa
			fontSize 1.6rem

	.dijitOpen
		.dijitTitlePaneTitleFocus
			.dijitArrowNode:before
				@extend .fa-caret-up:before

	.dijitClosed
		.dijitTitlePaneTitleFocus
			.dijitArrowNode:before
				@extend .fa-caret-down:before

	.dijitTitlePane
		padding 10px
		//line-height 1.4

		&:not(:last-child)
			border-bottom 1px solid $grayLight

	.dijitTitlePaneTextNode
		margin-right 10px
		font-weight bold

	.dijitTitlePaneContentOuter
		overflow hidden

	.collapseEntries
		max-height 150px
		margin-bottom 10px

	.collapseToggle
		padding-left 20px
		cursor pointer

	.bucket
		.containerBucket
			display flex
			align-items center
			margin-bottom 5px

			&:not(:last-child)
				border-bottom 1px solid $gray

			.flag
				width 1.3rem
				height 1.2rem
				padding-left 1.2rem
			.labelBucket
				font-weight normal
				margin 5px 0 5px 10px
				fontSize 1rem
				white-space break-spaces
			input
				min-width 13px
			input
			label
				cursor pointer

.flag-icon-en
	@extend .flag-icon-gb
