.containerTextSearch
	display flex
	flex-grow 1

	.innerButtons
	.outerButtons
		display flex
		align-items center

		.clearTextButton
		.expandSearchButton
		.searchButton
			@extend .fa
			cursor pointer
			width 1.5rem
			display flex
			justify-content center
			color black

	.textSearch
		position relative
		display flex
		flex-grow 1
		background-color $white
		border-radius 5px 0 0 5px
		padding 0.5rem 0

		.innerButtons
			*
				padding 0 0.5rem

				&:last-child
					border-right 1px solid $gray

		.clearTextButton
			&:hover
				color red
			&:before
				@extend .fa-times:before

		.inputSearch
			border none
			flex-grow 1
			padding 0 0.7rem
			background-color $white
			color black
			border-radius 5px 0 0 5px
			position relative
			top 0

	.outerButtons
		border-radius 0 5px 5px 0
		background-color $white

		.expandSearchButton
		.searchButton
			padding 0 0.5rem

			&:hover
				color $blue

		.searchButton
			&:before
				@extend .fa-search:before

		.expandSearchButton
			&:before
				@extend .fa-ellipsis-v:before

		> :not(:last-child)
			border-right 1px solid $grayLighter

	&.suggestionsShown
		.textSearch
			border-radius 5px 0 0 0
		.outerButtons
			border-radius 0 5px 0 0


.suggestions
	position absolute
	margin-top 2.3rem
	display flex
	flex-direction column
	flex-grow 1
	z-index 999
	border-radius 0 0 5px 5px
	box-shadow inset 0 0 22px -11px rgba(0,0,0,0.5)
	background-color $white
	max-height 40%
	overflow auto

	span
		color black
		padding 5px
		cursor pointer
		border-top 1px solid rgba(black, 0.1)
		&:last-child
			border-radius 0 0 5px 5px
		&:hover
			background-color $blue
			color white
		img
			width 15px
			height 15px
