.containerFilteringSelect
	//height 3rem
	.textSearch
		background-image $linen-light
		width calc(100% - 3.2rem)
		border-radius 5px 0 0 5px
		.fa-times
			position absolute
			right 10px
			color white

		.autocomplete
			//display none
			color #AAAAAA
			border 1px solid rgba(255, 255, 255, 0.0)

		.inputSearch
			background transparent
			color white
			border 1px solid rgba(255, 255, 255, 0.7)
			border-radius 5px 0 0 5px

	.buttonSearch
		border 1px solid rgba(255, 255, 255, 0.7)
		border-left none
		color white
		height auto
		width 3.3rem
		background-image $linen-light

	.disable
		opacity 0.4
		&, .inputSearch, .fa-times
			cursor not-allowed
		&:hover
			background-color initial
		.fa-times
			&:hover
				color white

	.notValid
		border-color #b94a48 !important

	.activeSuggest
		border-color rgba(82,168,236,.8) !important
		box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(82,168,236,.6)

.filteringResult
	flexible v center left
	position absolute
	z-index 999
	margin-top 3.1rem
	//background-image $linen-light
	border-radius 5px
	box-shadow 0 5px 10px rgba(0,0,0,0.2)
	border 1px solid rgba(0, 0, 0, 0.5)
	border-top none
	> span
		padding 5px
		color black
		cursor pointer
		img
			width 15px
			height 15px
	.suggestion
		&:nth-child(odd)
			background-color #fff
		&:nth-child(even)
			background-color #eee
		display flex
		align-items center
		.spanTemplate .subtitle
			color #999
		img
			width 30px
			height 30px
			border-radius 10px

	.spanPagination
		background-color #bbb !important
		display flex
		justify-content center
		font-weight 600
		&:hover
			fondo color $blue

	.borderResult
		&:first-child
			border-radius 5px 5px 0 0
		&:last-child
			border-radius 0 0 5px 5px

	.hover
		background-color $blue !important
		span
			color #fff !important

.notFormZone .containerFilteringSelect .buttonSearch
	height 2.8rem

.containerFilteringSelectRegister
	.textSearch, .buttonSearch
		background-image none