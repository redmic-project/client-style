.db
	.dijitPopup .dijitCalendar
		box-shadow 0 5px 10px rgba(0,0,0,.2)
		color $white
		fondo color rgba($black, $noOpacity)

	.dijitCalendarBodyContainer
		color $black

	.dijitCalendarPopup
	.dijitComboBoxMenuPopup
		bordeRedondeado()
		fondo textura medium

	.dijitCalendar
		background-color $grayLightest
		border-collapse separate
		border-radius 4px
		border 1px solid rgba(0,0,0,0.2)
		text-align center
		padding 8px
		font-size $baseFontSize - 2px

	.dijitCalendarDateTemplate
		padding 3px 7px
		background-color $white

	.dijitCalendarDayLabelTemplate
		padding-bottom 5px
		padding-top 5px
		font-weight 500
		text-shadow 0 1px 0 rgba(255, 255, 255, 0.8)

	.dijitCalendarDateLabel
		vertical-align middle

	.dijitCalendarPreviousMonth
	.dijitCalendarNextMonth
		background-color #DFE8FF
		color #0088CC

	.dijitCalendarSelectedDate
		background-color #0074CC
		color $white

	.dijitCalendarCurrentDate .dijitCalendarDateLabel
		text-decoration underline

	.dijitCalendarSelectedYear
		font-size 1.3em
		margin-left 8px
		margin-right 8px

	.dijitCalendar tr td:first-child
		border-left none

	.dijitCalendarYearLabel
		margin-top 8px
		text-shadow 0 1px 0 rgba(255, 255, 255, 0.8)

	.dijitCalendarIncrementControl:before
		@extend .dijitIcon:before

	.dijitCalendarIncrease:before
		@extend .fa-arrow-right:before

	.dijitCalendarDecrease:before
		@extend .fa-arrow-left:before

	.dijitA11ySideArrow
		display none

	.dijitCalendarMonthMenu .dijitCalendarMonthLabel
		@extend .db .dijitMenuItem
		color $white

	.dijitCalendarMonthMenu .dijitCalendarMonthLabelHover
		@extend .db .dijitMenuItemHover
