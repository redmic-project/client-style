.db
	label
		vertical-align middle

	// TextBox
	.dijitTextBox
		display inline-block
		color $gray
		border-radius $inputBorderRadius
		background-color $inputBackground
		border 1px solid $inputBorder
		box-shadow inset 0 1px 1px rgba($black, .075)

	.dijitTextBoxFocused
		transition border linear .2s, box-shadow linear .2s
		outline none
		border-color $blue
		box-shadow inset 0 1px 1px rgba($black, .075), 0 0 8px rgba($blue, .6)

	.dijitInputContainer
		color $white
		bordeRedondeado()
		padding 4px

	.dijitPlaceHolder
		font-style normal
		padding 4px 6px


	.dijitTextBoxDisabled
	.dijitTextBoxReadOnly
		box-shadow none
		color $inputDisabledColor

	// TextArea
	.dijitTextArea
		padding 4px 6px
		box-sizing border-box
		min-height 80px
		color $white

	// ComboBox
	.dijitComboBox .dijitButtonNode
		@extend .db .dijitComboButton .dijitButtonNode

	.dijitComboBox .dijitButtonNode.dijitArrowButton
		@extend .db .dijitComboButton .dijitArrowButton

	.dijitComboBox input.dijitArrowButtonInner
		display none

	.dijitComboBoxDisabled .dijitButtonNode
		@extend .db .dijitComboButtonDisabled .dijitButtonNode
		background-color $inputDisabledBackground

	// Validation
	.dijitTextBoxError
		color $errorText
		border-color $errorText

	.dijitTextBoxError.dijitTextBoxFocused
		box-shadow inset 0 1px 1px rgba($black, .075), 0 0 8px lighten($errorText, 20%)

	.dijitValidationContainer
		display none

	// All
	.dijitTextBox
	.dijitRadio
	.dijitCheckBox
	.dijitSelect .dijitButtonContents
	.dijitMenu
		bordeRedondeado()
		fondo color $color1

	.dijitMenuPopup
		> table
			padding .5rem

.dj_webkit
	.db
		.dijitInputField .dijitInputInner
			height $baseLineHeight

		.dijitInline .dijitInputField .dijitInputInner
			height inherit

		.dijitTextBoxDisabled input
		textarea.dijitTextAreaDisabled
			color $inputDisabledColor

		.dijitTextBoxDisabled
			opacity 0.4
