/*
	Plantilla para las animaciones de carga.
*/



// Contenedores

.loadingContainer
.templatePlaceholderContainer
.dgrid-loading
.dgrid-no-data
	@extend .centerContentContainer
	color $black

.loadingContainer
.templatePlaceholderContainer
	fontSize 3rem
	text-align center
	padding 15px
	width calc(100% - 30px)
	height calc(100% - 30px)

//.symbolG
//	fontSize $hugeFontSize
//	maximizeFont 20

.loadingDialog
	border none !important
	border-radius 0 !important
	background none !important
	box-shadow none !important
	.bubblingG
		width 50px
		height 50px
		fontSize $hugeFontSize
		//maximizeFont 15

.loadingWrapper
.lockedWrapper
	@extend .masterContainer
	@extend .centerContentContainer
	fondo color rgba($black,0.5)
	z-index $loadingAndLockedZIndex

	&:not(.instantLoading)
		animation fadeIn 0.7s
		animation-fill-mode forwards

	.loadingContainer
		flexible h center center
		color $white
		fontSize $loadingFontSize
		cursor progress

@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1

[loading=true] [loading=true]
	.loadingWrapper
		display none

.loadingWrapperGlobal
	z-index $loadingAndLockedZIndex


// Elementos animados genéricos

.spinningElement
	createAnimation spin 1s infinite linear

.expandingOpenElement
	createAnimation expandOpen 1.2s 1 ease-out
	display flex
	flex-direction column
	align-items center
	.fr
		margin-bottom 2rem
	span
		font-size 3rem

.hatchElement
	createAnimation hatch 2s 1 ease-in-out
	transform-origin 50% 100%

.infoContainer
	.expandingOpenElement
		.fr
			margin-bottom 1rem
		span
			font-size 1.8rem

	.loadingContainer
		font-size 3rem

.reconnectContainer
	@extend .masterContainer
	@extend .centerContentContainer
	fondo color rgba($black, 0.5)

	.templatePlaceholderContainer
		color $white

// Ola de burbujitas (a.k.a. gusanito hipnótico)

.bubblingG
	color $white
	flexible h center center
	sombreadoTexto()
	width 25px
	height 25px
	background $blue
	border-radius 125px
	animation bubblingG 0.9s infinite alternate

.bubblingG_1
	animation-delay 0s

.bubblingG_2
	animation-delay 0.27s

.bubblingG_3
	animation-delay 0.54s

.bubblingG_4
	animation-delay 0.81s

.bubblingG_5
	animation-delay 1.08s

.bubblingG_6
	animation-delay 1.35s


.hourglass-spin
	@extend .fa
	animation hourglassSpinRotate 4s 2s infinite
	&:before
		content '\f251'
		animation hourglassSpinContent 4s steps(1) infinite



// Definición de las animaciones

@keyframes bubblingG
	from
		fondo color $blue
		transform translateY(0)
	to
		fondo color $blueDark
		transform translateY(53px)


@keyframes spin
	from
		transform rotate(0deg)
	to
		transform rotate(359deg)

@keyframes expandOpen
	0%
		transform scale(1.8)
	50%
		transform scale(0.95)
	80%
		transform scale(1.05)
	90%
		transform scale(0.98)
	100%
		transform scale(1)

@keyframes hatch
	0%
		transform rotate(0deg) scaleY(0.6)
	20%
		transform rotate(-2deg) scaleY(1.05)
	35%
		transform rotate(2deg) scaleY(1)
	50%
		transform rotate(-2deg)
	65%
		transform rotate(1deg)
	80%
		transform rotate(-1deg)
	100%
		transform rotate(0deg)

@keyframes hourglassSpinContent
	0%
		content '\f251'
	25%
		content '\f252'
	50%
		content '\f253'
	85%
		content '\f251'

@keyframes hourglassSpinRotate
	0%
		transform rotate(0deg)
	30%
		transform rotate(0deg)
	55%
		transform rotate(720deg)
	100%
		transform rotate(720deg)
