/*
	Plantilla para la página de acceso a la aplicación.
*/


.bgWhite
	bordeRedondeado()
	sombreadoCaja o
	fondo color rgba($white, 0.2)

.href
	color $white
	&:hover
		color $color7
		cursor pointer

.outerApp
	fullSize()
	fondo imagen $login-image
	background-repeat no-repeat
	background-attachment fixed
	background-position center top
	color $white
	text-align center
	noScroll()
	flexible v center center
	> div                  /* Coloca los div un poco más arriba del centro */
		margin-top -5%
	a
		color $white
		&:hover
			color $color7
			text-decoration none

	.form, .form-horizontal
		min-width 10rem

	.accessGroup
		flexible v space-between up
		padding 2em 2em 1em
		> div, > form
			width 100%

		//Para register y recoverPassword
		.linkZone
			flexible h space-around center
			padding-top 0.5em
			> div
				width 50%

		.boxLabel
			flexible h space-around center
			margin-top 0.5em
			padding-top 0.5em
			border-top 1px solid rgba(255, 255,255, 0.15)
			> div
				width 50%

		.dijitTextArea
			min-height 15rem

		.registerForm
			width 95%
			overflow overlay
			padding-right 2em

	.link
		color $blue
		&:hover
			color $grayLight
	.header
		flexible v center center
		.title
			width 100%
			height 5em
			display flex
			justify-content center

			img.logoRedmic
				height 5em

			h1.titleRedmic
				@extend .fHeight
				font-size 6.5em
				line-height 0.65em
				margin 0

		h4.subtitle
			font-size 1em
			margin 0.5em 0

	.formLogin
		display flex
		flex-direction row

		div:first-child
			flex-grow 1
			margin-right 1em

			div:first-child
				margin-bottom 2%

		div:last-child
			display flex

			> span
				display flex
				flex-grow 1

				> span
					display flex
					align-items center
					flex-grow 1
					border-radius 10px
					justify-content center

		.dijitInputField
			@extend .fWidth
			.dijitInputInner
				border-radius 3px
				padding 0 5px !important

	.boxButton
		flexible h space-around center
		padding-top 1em
		min-height 3em

	.resettingBoxButton
		padding-top 0px
		min-height 1em

	.btn-block
		.dijitButtonNode
			fondo degradado buttonLogin
			&:hover
				fondo degradado buttonLoginHover

	.dijitTextBox
		width 100%
		fondo color rgba($colorLoginTextBox, 0.5)

	.boxContainer
		@extend .flexContainerColumn
		@extend .fWidth
		@extend .fHeight
		align-items center
		justify-content center

		.onlyBox
			@extend .flexContainerColumn
			padding 1rem
			width 50%

		.feedback
			.feedbackForm
				overflow overlay
				padding-right 2em
			.boxButton
				display flex
				justify-content center
				> span
					width 30rem

			.dijitTextArea
				min-height 15rem

		.termCondition
			max-height 70%
			.contentTermCondition
				showScroll()
				flex-grow 1
				padding 0 2em

	.infoContainer
		flex-direction row
		.elementInfo
			flexible v space-around center
			line-height 2em
			padding 2%
			margin 0 6%
			min-height 30em
			width 50%
		.tamLogoREDMIC
			width 15em
		.tamLogoOAG
			width 8em
		a
			color $yellowTitleRedmic

	footer
		position absolute
		bottom 0
		left 0
		semiPadded v
		flexible h space-around center
		fondo color rgba($colorLoginTextBox, 0.3)
		fullSize h

		.flags
			> a
				display inline-block
				height 20px
				width 27px
				&:not(:last-child)
					margin-right 5px

	.clickViewLogin
		position absolute
		width 100%
		height 100%

	.versionNumber
		position absolute
		left 0

.noSupport
	text-align center
	margin-top 250px
	.textNoSupport
		margin-bottom 60px
	.iconMargin
		margin-left 50px

.termCondition .contentTermCondition, .whatIsRedmic
	text-align justify
	padding 0 3%

	.titleRedmic
		text-align center

	h3
		margin 15px 0 -5px 0

	ul
		list-style initial
		list-style-position inside
		list-style-type disc

		li
			margin 5px 0
			a
				font-weight bold
			ul
				margin-left 3rem
				list-style-type square

.whatIsRedmic
	padding 1rem 15%

.noPadding
	noPadding()

@media (min-width: 1024px)
	.outerApp
		.loginBox
			width 400px

@media (max-width: 1023px)
	.outerApp
		.header
			.title
				height 4.5em

				img.logoRedmic
					height 4.5em

				h1.titleRedmic
					font-size 6em

			h4.subtitle
				font-size 1em
				margin 0.5em 0
	.whatIsRedmic
		padding 1rem 10%

@media (max-width: 960px)
	.outerApp .boxContainer .onlyBox
		width 80%

@media (max-width: 768px)
	.outerApp
		font-size 10px
		.header
			.title
				height 4em

				img.logoRedmic
					height 3.8em

				h1.titleRedmic
					font-size 5em
			.subtitle
				font-size 0.8em

		.formLogin
			flex-direction column

			div:first-child
				margin-right 0em
				margin-bottom 1em
	.whatIsRedmic
		padding 1rem 5%

@media (max-width: 480px)
	.outerApp
		font-size 10px
		.header
			.title
				height 2.5em

				img.logoRedmic
					height 2.6em

				h1.titleRedmic
					font-size 3.5em
			.subtitle
				display none
				font-size 0.8em

		.infoContainer
			flex-direction column
			.elementInfo
				height 35%
				width 80%
				min-height 10em
				margin 0 10%
				margin-bottom 4%
			.elementInfo:last-child
				margin-bottom 0%

@media (max-height: 480px)
	.outerApp
		font-size 10px
		.onlyBox
			max-height 70%
		.infoContainer
			.elementInfo
				min-height 10em
				margin 0 2%
				margin-bottom 2%
				height 65%