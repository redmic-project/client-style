/*
	Plantilla para la página de bienvenida a la aplicación.
*/

.titleWelcome
	flexible h space-between center
	cursor default

	.divTitle
		margin 0 auto
		textEllipsis()

		span
			fontSize 3.5rem

	span
		fontSize 4rem
		font-weight bold

	.colorWelcome
		color $grayLighter

.box
	.contentInfo
		margin 0.5rem
		line-height 2
		color $grayLighter
		.colorWhite
			color white
			font-weight bold


.boxContainerBorder
	border-radius 0 0 5px 5px

.boxContainer
	showScroll()

	.favouritesBoxItems
		display flex
		flex-wrap wrap
		justify-content start
		align-items start

		.module
			flex-grow 1

			.button
				flex-grow 1

	.boxItems
		.module
			flexible h center center
			padding 0.5rem

			.button:hover, .activeBox
				fondo color $blue
			.disabled:hover
				background none
			.disabled
				opacity 0.5
			.button
				flexible v center space-between
				width 10rem
				bordeRedondeado()
				sombreadoCaja o
				padding 1rem 0
				cursor pointer

				.iconModule
					align-self center
					font-size 2rem
					margin 5px 0px
					width 25px
					text-align center

				.name, .description
					display flex
					align-items center
					flex-grow 1
					align-self center
					line-height 1.4rem !important
					text-align center

				.description
					flex-grow 1
					margin 0px 1rem
					margin-top 1rem
			.box
				min-height 150px
				.iconModule
					fontSize 3rem

		.lastActivityModule
			flexible h space-between center
			min-height 5rem
			padding 0 1rem
			cursor pointer
			&:hover
				fondo color $blue
				.spanTemplate
					.span, .status, .subtitle, .subtitle i, .iconList:hover, em
						color #fff !important
				a
					color #fff
					&:hover
						color grey
			span
				textEllipsis()
				line-height 1.8rem
				margin-right 0.5rem

				.spanTemplate .subtitle
					color #bbb

		.lastActivityModule:nth-child(odd)
			@extend .mediumTexturedContainer

.domains
	overflow auto
	flex-grow 1
	@extend .fHeight
	@extend .borderRadiusBottom

	.boxButton
		flexible h center center
		noPadding()
		margin 0.7rem 0
		cursor pointer
		.name
			text-align center
			line-height 4rem
			width 90%
			bordeRedondeado()
			sombreadoCaja o
			&:hover
				fondo color $blue

a:hover
	text-decoration none

.domainsSpecial div
	text-decoration underline

.socialPanel
	display flex
	flex-wrap wrap
	align-items center
	justify-content flex-start
	> *
		fontSize 3rem
		color $white
		margin 0.2rem 0.5rem
