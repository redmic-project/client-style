.topZone
	@extend .fWidth
	noScroll()
	min-height 3rem
	padding .5rem 0
	fondo color $color13
	border-radius 5px 5px 0 0
	border-radius unquote('0\9')
	display flex
	justify-content space-between
	flex-wrap wrap

	> div
		flex-grow 1
		padding .2rem 0
		max-width 100%

	.dijitIcon
		@extend .fWidth

	.textSearchZone
		display flex
		align-items center

		> div
			margin 0 .5rem

	.titleZone
		fontSize 1.2rem
		display flex
		justify-content flex-start
		align-items center
		max-width calc(100% - 1rem)

		span
			padding-left 1rem
			textEllipsis()

	.widthLimitTitleZone
		max-width calc(100% - 100px)

	.optionZone
		display flex
		justify-content end
		padding-right 2rem

	.buttonsZone
	.filtersZone
		display flex
		justify-content flex-end
		> div
			margin-right 1rem
		> span
			cursor pointer
		div:last-child
			margin-right 0

.keypadZone, .selectZone
	display flex
	align-items center
	justify-content flex-end
	padding 0

.keypadZone, .selectZone, .containerList .framework
	.iconKeypad
		display flex
		align-items center
		justify-content space-between

		a
			color $white

		.iconContainer
			&.selected
				color $blue

			&.disabled
				opacity 0.4

			&:not(.disabled):hover
				color lighten($blue, 10%)

			i
				@extend .clickable
				margin 0 1rem
				fontSize 1.4rem

		.iconGroup
			display flex
			align-items center
			justify-content space-between
			padding 4px 10px

			&:not(:first-child)
				border-left solid 1px rgba(255, 255, 255, 0.4)

.containerList .framework
	.iconKeypad
		margin-bottom 5px

.selectZone
	margin 5px
	padding 5px 0
	border-radius 5px
	.dijitSelect td
		line-height 50%

.topZoneCitation
	display flex
	flex-direction row-reverse
	background-color transparent
	.button
		padding 0 5px

.centerZone
	display flex
	justify-content space-between
	flex-direction row
	//flexible h space-between center
	noScroll()

.facetsZone
	position relative !important
	height unset !important
	width 15rem !important
	@media (max-width $media-high-size)
		width 14rem !important
	@media (max-width $media-medium-size)
		width 13rem !important
	@media (max-width $media-low-size)
		width 12rem !important
	fondo color $color13
	border-radius 0 0 0 5px
	.containerFacets
		border-radius 0 0 0 5px
		border-radius unquote('0\9')
		margin 5px
		height calc(100% - 10px)
	.dijitTab
		fondo color $color13
		background-image none
	.dijitTabPaneWrapper
		background-image none
	.dijitTree
		margin 5px

.isolatedFacetsZone
	@extend .facetsZone
	border-radius 5px
	margin-right 5px

	.containerFacets
		border-radius 5px

.listZoneWithFacets
	.containerList
		.contentList
			border-radius 5px 0 0 5px
		.bottomList
			border-radius 0 0 5px 0
			border-radius unquote('0\9')

.listZone
	display flex
	width 100%
	padding 0

	.containerDetails
		flex-grow 1
		border-radius 5px 0 0 0
		.header
			border-radius 5px 0 0 0
		.content
			border-radius 0 0 5px 0

.listZone > .map
	border-radius 0 0 5px 0

.sidebarAndContent
	.topZone, .containerList .bottomList, .containerDetails .content
		border-radius 0
	.centerContent
		border-top 1px solid #4a4a54

.nestedContent
	position relative
	noScroll()

	& > *
		position absolute
		@extend .fHeight
		@extend .fWidth

		.primaryIn
			animation enterFromLeftToRight 0.6s
			animation-fill-mode forwards
		.primaryOut
			animation leaveToLeft 0.4s
			animation-fill-mode forwards
		.secondaryIn
			animation enterFromRightToLeft 0.6s
			animation-fill-mode forwards
		.secondaryOut
			animation leaveToRight 0.4s
			animation-fill-mode forwards

@keyframes enterFromRightToLeft
	0%
		transform translateX(100%)

	100%
		transform translateX(0%)

@keyframes enterFromLeftToRight
	0%
		transform translateX(-100%)

	100%
		transform translateX(0%)

@keyframes leaveToLeft
	0%
		transform translateX(0%)

	100%
		transform translateX(-100%)

@keyframes leaveToRight
	0%
		transform translateX(0%)

	100%
		transform translateX(100%)


li.objectClassification
	&:not(:first-child)
		margin-top 0.5rem

li.objectClassificationDetails
	padding-left 2rem
