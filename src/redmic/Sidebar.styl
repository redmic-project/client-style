.mainSidebar
	@extend .shadowBox
	top $topbar-size !important
	height "calc(100% - %s)" % $topbar-size !important
	noPadding()
	z-index 4

	> div
		height 100%

nav.main-nav > ul
	list-style none
	noMargin()
	noPadding()
	border-bottom $borde1
	negrita()

	& li
		border-top $borde1
		color $grayLighter
		text-shadow $sombra-s $shadowTextBlurRadius rgba($black, $shadowTextOpacity)
		display block
		text-decoration none
		cursor pointer
		&:hover
			fondo color $blue

		& i
		& > a
			color $grayLighter

		&.active
			fondo degradado sidebar
			color $color11
			text-shadow $sombra-s $shadowTextBlurRadius rgba($white, $shadowTextOpacity)

			& i
			& > a
				color $color11

	& a
	& a:hover
		text-decoration none

nav.primary
	flexible v space-between center
	background $color13
	fullSize v
	width $sidebar-size
	@media (max-width $media-high-size)
		width $sidebar-size * 0.85
	@media (max-width $media-medium-size)
		width $sidebar-size * 0.7
	@media (max-width $media-low-size)
		width $sidebar-size * 0.5

	& > ul
		width 100%

		& > li
			border-bottom $borde2
			text-align center
			padding 0.5rem 0
			&.click
				fondo color rgba($black, 0.4)
				&.active
					fondo color $color4

			& i
				display block
				fontSize 2.6rem

			& > span
				display block

nav.secondary
	top $topbar-size
	height "calc(100% - %s)" % $topbar-size
	width $sidebar-secondary-size
	@media (max-width $media-high-size)
		width $sidebar-secondary-size * 0.9
	@media (max-width $media-medium-size)
		width $sidebar-secondary-size * 0.8
	@media (max-width $media-low-size)
		width $sidebar-secondary-size * 0.7
	background linear-gradient(left, $color13, rgba($colorGrayBlack, 0.9))
	box-shadow 5px 0 10px 0 rgba($black, $shadowBoxOpacity)
	showScroll()

	& > ul li
		text-align left
		padding 0

		& > a
			padding 0.5rem
			text-align left
			text-decoration none
			display flex
			align-items center

			&:focus
				outline none

			& div
				width 3rem
				margin-right 0.5rem
				text-align center

			& i
				fontSize 2.2rem

	&.retiring
		z-index 3
		noShadow()
		position absolute
		left - $sidebar-secondary-size
		transition left 0.5s ease-in 0s

	&.overall
		z-index 5
		position absolute
		left $sidebar-size
		@media (max-width $media-high-size)
			left $sidebar-size * 0.85
		@media (max-width $media-medium-size)
			left $sidebar-size * 0.7
		@media (max-width $media-low-size)
			left $sidebar-size * 0.5
		transition left 0.4s ease-in 0s, z-index 0.05s ease 0.48s

.reducedMenu
	nav.primary
		width $sidebar-reduced-size
		@media (max-width $media-high-size)
			width $sidebar-reduced-size * 0.85
		@media (max-width $media-medium-size)
			width $sidebar-reduced-size * 0.7
		@media (max-width $media-low-size)
			width $sidebar-reduced-size * 0.5

		& span
			display none

	nav.secondary.overall
		left $sidebar-reduced-size
		@media (max-width $media-high-size)
			left $sidebar-reduced-size * 0.85
		@media (max-width $media-medium-size)
			left $sidebar-reduced-size * 0.7
		@media (max-width $media-low-size)
			left $sidebar-reduced-size * 0.5
