/*
	Estilo para los árboles de cbtree.
*/



.dijitTreeLabel
	noMargin()

.dijitCheckBoxInput
	width 1rem
	height 1rem

.frameworkTree
	height 2.5rem
	display flex
	justify-content space-between
	align-items center
	margin 0 1rem

.dijitTree
	margin 10px
	color $white
	width 100%

	// Styling for basic tree node (unhovered, unselected)
	// Also use this styling when dropping between items on the tree

	.dijitTreeRow
	.dijitTreeNode .dojoDndItemBefore
	.dijitTreeNode .dojoDndItemAfter
		padding 2px 0
		transition-property background-color, border-color
		transition-duration 0.25s
		transition-timing-function ease-out

	.dijitTreeRow
		display flex
		align-items center

	.dijitTreeExpando
		display none

	.dijitExpandoText
		display inline
		visibility hidden
		width 1.5rem
		margin-left 0.5rem
		fontSize 1.8rem
		line-height 100%
		@extend .fa
		&:hover
			color $blue
		&:before
			visibility visible
			@extend .fa-caret-right:before

	.dijitTreeExpandoOpened + .dijitExpandoText
		&:before
			@extend .fa-caret-down:before

	.dijitTreeExpandoLeaf + .dijitExpandoText
		&:before
			visibility hidden

	.dijitTreeExpandoLoading + .dijitExpandoText
		&:before
			@extend .fa-refresh:before


	// Cajas de selección

	.cbtreeCheckBox
		@extend .fa
		width 1.5rem
		height 1.5rem
		fontSize 1.4rem
		position relative
		//margin-right 0.5rem
		&:before
		input
			position absolute
			left 0
			width 100%
		&:before
			top 0
			height 100%
		input
			//top -0.05rem
			//height calc(100% + 1.25rem)
			@extend .fHeight


	.cbtreeCheckBox:before
		/* unchecked */
		@extend .fa-square-o:before

	.cbtreeCheckBoxChecked:before
		/* checked */
		@extend .fa-check-square:before

	.cbtreeCheckBoxMixed:before
		/* checked & mixed */
		@extend .fa-square:before

	.cbtreeCheckBoxDisabled
	.cbtreeCheckBoxReadOnly:before
		/* disabled */
		@extend .fa-square-o:before
		opacity 0.5

	.cbtreeCheckBoxCheckedDisabled:before
	.cbtreeCheckBoxCheckedReadOnly:before
		/* disabled but checked */
		@extend .fa-check-square:before
		opacity 0.5

	.cbtreeCheckBoxMixedDisabled:before
	.cbtreeCheckBoxMixedReadOnly:before
		/* disabled but checked & mixed */
		@extend .fa-square:before
		opacity 0.5

	.cbtreeCheckBoxHover:before
		/* hovering over an unchecked enabled checkbox */
		@extend .fa-square-o:before
		color $blue

	.cbtreeCheckBoxCheckedHover:before
		/* hovering over a checked enabled checkbox */
		@extend .fa-check-square:before
		color $blue

	.cbtreeCheckBoxMixedHover:before
		/* hovering over a checked & mixed checkbox */
		@extend .fa-square:before
		color $blue
