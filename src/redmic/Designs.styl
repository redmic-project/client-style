.designLayoutContainer
	@extends .flexContainer
	@media (orientation portrait)
		flex-flow column

.mapAndContentLayoutMapDesign
	> :first-child
	> :last-child
		display flex

	> :first-child
		flex-grow 1
		@media (orientation landscape)
			margin-right 0.3rem
		@media (orientation portrait)
			margin-bottom 0.3rem

	> :last-child
		@media (orientation landscape)
			height 100%
			width 35%
			max-width 40rem
		@media (orientation portrait)
			height 35%
			width 100%

