// Backgrounds
// -------------------------
$backgroundColor = #f5f5f5;
$backgroundHighlightColor = #f9f9f9;
$backgroundHover = $backgroundColor;
$backgroundActive = $backgroundHover;

$infoBackground = #5bc0de;
$infoBackgroundHighlight = #2f96b4;
$successBackground = #62c462;
$successBackgroundHighlight = #51a351;
$warningBackgroundHighlight = $orange;
$warningBackground = lighten($warningBackgroundHighlight, 15%);
$dangerBackground = #ee5f5b;
$dangerBackgroundHighlight = #bd362f;

// Variables de Alertify
$alertifyTextError = $white
$alertifyTextSuccess = $white
$alertifyTextWarn = $white
$alertifyBackgroundError = linear-gradient(top, $dangerBackground, $dangerBackgroundHighlight)
$alertifyBackgroundSuccess = linear-gradient(top, $successBackground, $successBackgroundHighlight)
$alertifyBackgroundWarn = linear-gradient(top, $warningBackground, $warningBackgroundHighlight)
$alertifyBorderError = $white
$alertifyBorderSuccess = $white
$alertifyBorderWarn = $white

// Variables del grid
$tableBorder = $grayLighter
$gridBorder = $tableBorder
$gridRowEvenBackground = $white
$gridRowOddBackground = $grayLightest
